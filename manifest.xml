<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp 
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:type="MessageRead">

  <Id>975757d4f-448b-42b7-b375-ea54bfd24267</Id> <!-- Replace with your GUID -->
  <Version>1.0.0.0</Version>
  <ProviderName>PPT Group AI</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="PPT Group Outlook AI Bot"/>
  <Description DefaultValue="Assign categories and manage escalations for email cases directly from Outlook."/>

  <IconUrl DefaultValue="https://outlook-addin-779a.onrender.com/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://outlook-addin-779a.onrender.com/icon-128.png"/>

  <SupportUrl DefaultValue="https://pptgroup.co.za"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://outlook-addin-779a.onrender.com/panel.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

</OfficeApp>
